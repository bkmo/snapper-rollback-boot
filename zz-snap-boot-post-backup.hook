[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = systemd
Target = grub
Target = linux-firmware

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = boot/vmlinuz-*
Target = usr/lib/modules/*/vmlinuz
Target = usr/lib/initcpio/*

[Action]
Description = Post-Transaction Backup of /boot...
When = PostTransaction
Exec = /usr/bin/bash -c 'rm -rf /.bootbackup/boot && mkdir -p /.bootbackup/boot && cp -aT /boot /.bootbackup/boot'

